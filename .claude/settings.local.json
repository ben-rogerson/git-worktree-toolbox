{
  "permissions": {
    "allow": [
      "Bash(chmod:*)",
      "Bash(npm pack:*)",
      "Bash(npm install:*)",
      "Bash(npm run lint)",
      "Bash(npm run build:*)",
      "Bash(timeout:*)",
      "Bash(npx tsc:*)",
      "Bash(git worktree:*)",
      "Bash(node:*)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "bypassPermissions"
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> ~/.claude/bash-command-log.txt"
          }
        ]
      }
    ]
  },
  "outputStyle": "Sr. Software Developer"
}